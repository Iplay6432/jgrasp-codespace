{
  "name": "Python/Java Development with ChromeOS-like Desktop",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "postCreateCommand": "sudo apt update -y && sudo apt upgrade -y",
  "features": {
    "ghcr.io/devcontainers/features/desktop:1": {},
    "ghcr.io/devcontainers/features/java:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["vscjava.vscode-java-pack"]
    }
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "desktop"
    }
  },
  "remoteUser": "vscode"
}